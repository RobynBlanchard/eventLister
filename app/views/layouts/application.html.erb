<!DOCTYPE html>
<html>
  <head>
    <title>EventLister</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class='clearfix'>
    </header>

    <div class="row">
      <div class="col-sm-1 ">
        <div id="show_whatever" class="container">
          <div class="bar1"></div>
          <div class="bar2"></div>
          <div class="bar3"></div>
        </div>
        <div id="whatever" class="menu">
          <div class="home-nav">
            <ul>
              <li><%= link_to "Home", homepage_index_path %></li>
            </ul>
          </div>
          <div class="listings-nav">
            <ul>
              <li><%= link_to "Listings", listings_index_path %></li>
            </ul>
          </div>
          <div class="add-artist-nav">
            <ul>
              <li><%= link_to "Add", new_artist_path %></li>
            </ul>
          </div>
          <div class="edit-artists-nav">
            <ul>
              <li><%= link_to "Edit", artists_path %></li>
            </ul>
          </div>
        </div>
      </div>

      <div class="col-sm-11 ">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>"><%= value %></div>
        <% end %>

        <div class='content'>
          <%= yield %>
      </div>
  </div>
  </body>
</html>
