<h1>Listing uploads</h1>

<table>
  <tr>
    <th>Artist</th>
    <th>Url</th>
  </tr>

  <% if Artist.nil? == false %>
  <% Artist.all.each do |artist| %>
    <tr>
      <td><%= artist.artist_name %></td>
      <td><%= artist.url %></td>
      <td><%= link_to 'Show', upload_path(artist) %></td>
      <td><%= link_to 'Destroy', upload_path(artist),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </tr>
  <% end %>
  <% end %>
</table>

<%= link_to 'Listings', events_index_path %>
<%= link_to 'List of uploads', uploads_path %>
<%= link_to 'New upload', new_upload_path %>
