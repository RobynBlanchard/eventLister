<h1>Listing artists</h1>

<table>
  <tr>
    <th>Artist</th>
    <th>Url</th>
  </tr>

  <% if Artist.nil? == false %>
  <% Artist.all.each do |artist| %>
    <tr>
      <td><%= artist.artist_name %></td>
      <td><%= artist.url %></td>
      <td><%= link_to 'Show', artist_path(artist) %></td>
      <td><%= link_to 'Destroy', artist_path(artist),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
      </tr>
    </tr>
  <% end %>
  <% end %>
</table>

<%= link_to 'Listings', listings_index_path %>
<%= link_to 'List of artists', artists_path %>
<%= link_to 'New artist', new_artist_path %>
